              "value": "30"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "LOG_LEVEL",
              "value": "info"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "appServiceUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('appServiceName'), '.azurewebsites.net')]"
    },
    "functionAppName": {
      "type": "string", 
      "value": "[parameters('functionAppName')]"
    }
  }
}
