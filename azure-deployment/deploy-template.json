            },
            {
              "name": "TIMESCALE_PORT",
              "value": "5432"
            },
            {
              "name": "TIMESCALE_DB", 
              "value": "cafe"
            },
            {
              "name": "TIMESCALE_USER",
              "value": "postgres"
            },
            {
              "name": "TIMESCALE_PASSWORD",
              "value": "bzchzz"
            },
            {
              "name": "MONGODB_URI",
              "value": "mongodb://cafeuser:CafeBrain2024!@4.198.153.55:9017/?authMechanism=SCRAM-SHA-256&authSource=cafe"
            },
            {
              "name": "SQUARE_ENV",
              "value": "production"
