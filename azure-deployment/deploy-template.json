{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServiceName": {
      "type": "string",
      "defaultValue": "cafe-brain-app"
    },
    "functionAppName": {
      "type": "string", 
      "defaultValue": "cafe-brain-sync"
    },
    "location": {
      "type": "string",
      "defaultValue": "Australia East"
    }
  },
  "variables": {
    "storageAccountName": "[concat('cafebrain', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "plan-cafe-brain",
      "location": "[parameters('location')]",
      "kind": "linux",
      "properties": {
        "reserved": true
      },
      "sku": {
        "name": "B1"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appServiceName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', 'plan-cafe-brain')]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'plan-cafe-brain')]",
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "appSettings": [
            {
              "name": "SQUARE_ACCESS_TOKEN",
              "value": "EAAAEM4OAGO-ToEf-mn8NyvOaxdJeiXejYr3bhcvjkYhyPAryCRFhsd9h3smTYOv"
            },
            {
              "name": "SQUARE_LOCATION_ID",
              "value": "L5D18K5RBWQJH"
            },
            {
              "name": "SQUARE_ENV",
              "value": "production"
            },
            {
              "name": "SQUARE_VERSION",
              "value": "2025-07-16"
            },
            {
              "name": "TIMESCALE_HOST",
              "value": "4.198.153.55"
            },
            {
              "name": "TIMESCALE_PORT",
              "value": "5432"
            },
            {
              "name": "TIMESCALE_DB",
              "value": "cafe"
            },
            {
              "name": "TIMESCALE_USER",
              "value": "postgres"
            },
            {
              "name": "TIMESCALE_PASSWORD",
              "value": "bzchzz"
            },
            {
              "name": "MONGODB_URI",
              "value": "mongodb://cafeuser:CafeBrain2024!@4.198.153.55:9017/?authMechanism=SCRAM-SHA-256&authSource=cafe"
            },
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "SQ_ORDERS_BACKFILL_DAYS",
              "value": "30"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~20"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "LOG_LEVEL",
              "value": "info"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-04-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('functionAppName')]", 
      "location": "[parameters('location')]",
      "kind": "functionapp,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-04-01').keys[0].value)]"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
